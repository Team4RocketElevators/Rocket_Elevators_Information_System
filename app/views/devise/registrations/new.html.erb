<body>
  <div id="wrapper" class="container w-1000" align="center" style="white-space: nowrap; padding-top: 100px; padding-left: 10px; padding-right: 10px;">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <label>Email 
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </label>
      </div>
      <div class="field">
        <label>Password 
          <% if @minimum_password_length %>
            <% minimum = @minimum_password_length.to_s + " characters minimum,
            1 number,
            1 uppercase letter,
            1 lowercase letter" %>
          <% else %>
            <% minimum = "1 number,
            1 uppercase letter,
            1 lowercase letter" %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", pattern: "(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" %>
        </label>
      </div>

      <div class="field">
        <label>Password confirmation
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </label>
        <div>
          <p><%= minimum %></p>
        </div>
      </div>

      <div class="actions">
        <%= f.submit("Sign up", :class => "btn btn-default btn-lg") %>
      </div>
    <% end %>
    Already have an account? <strong><%= render "devise/shared/links" %></strong>
  </div>
  <br><br>
  <div>
    <img class="footer-logo" src="../assets/R2.png" alt="Rocket Elevators logo" width="500px">
  </div>
</body>